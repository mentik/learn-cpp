{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build c++",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-I",
        "src",
        "-std=c++20",
        "-Wall",
        "-Wextra",
        "-g",
        "-o",
        "build/$rel_path/${fileBasenameNoExtension}"
      ],
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c"]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "g++",
            "args": [
                "-g",
                "-fdiagnostics-color=always",
                "${file}",
                "-I",
                "src",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.bin"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
